@media screen and (max-width: 680px)
	.showing
			//muestra el menu
			max-height: 20em
			transition: 0.6s
	.handle
		display: block	
		transition: 0.4s
	
@media screen and (min-width: 681px)
	.menu
	max-height 20em
	a
		display inline-block
	.list
		max-height: 20em
		transition: 0.6s	
		text-align: center;
	.item	
		display inline-block !important
		margin-right 1em
	.handle
		display: none
		transition: 0.6s

	
			
	
	
 