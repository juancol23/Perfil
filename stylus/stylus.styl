@import "normalize.styl"
.max-height-all
	max-height 20em !important
	overflow hidden
	transition:.5s

.showing
	max-height 100%
	overflow hidden
	transition: 0.4s
.max-height-0
	max-height 0px
	overflow hidden
	transition:1.2s
.text-center
	text-align center
.action
	margin-left 1.4em
	
.item:hover
	transition: 0.4s
	background #939393
		
body
	font-size 16px
	font-family "Myriad Pro"
header
	background: rgb(95, 95, 95)
	nav
		ul
			padding 0 auto
			max-height 0px
			overflow hidden
			transition 0.6s
			margin 0
			.item
				padding .6em
				text-align center
				display block
				a
					text-decoration none
					font-size 1.6em
					color: white
	
			
	.handle			
		text-align center
		cursor pointer
		padding .7em
		&:hover
			transition: 0.4s
			background #27B198
		 
		 
