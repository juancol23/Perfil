@import "normalize.styl"
.max-height-all
	max-height 20em !important
	overflow hidden
	transition:.5s

.showing
	max-height 100%
	overflow hidden
	transition: 0.4s
.max-height-0
	max-height 0px
	overflow hidden
	transition:1.2s
.text-center
	text-align center
.action
	margin-left 1.4em
	
.item:hover
	transition: 0.4s
	background #27B198
		
body
	font-size 16px
	font-family "Myriad Pro"
header
	background #4F57A3
	nav
		ul
			padding 0 auto
			max-height 0px
			overflow hidden
			transition 0.6s
			margin 0
			.item
				padding .6em
				text-align center
				display block
				a
					text-decoration none
					font-size 1.6em
					color: white
	
			
	.handle			
		text-align center
		cursor pointer
		padding .7em
		&:hover
			transition: 0.4s
			background #27B198
		 
		 
section.Section
	article.Article_Hello
		padding 1em
		background #EFEFF3
		h1.tittle
			text-align center
			margin 0
		p.desc
			text-align center
			font-size 1.1em
	article.Article_About
		padding 0.6em 1em
		h1.tittle
			text-align center
			margin 0
		p.desc
			text-align justify
			font-size 1.1em
			margin-bottom: 0em
	article.Article_Social
		padding 1em	 
		background #EFEFF3

	article.Article_opcion
		.Bottom_Proyecto
			background #4F57A3
			cursor pointer
			h1.tittle
				color white
				margin 0
			p.desc_1
				margin .2em
				transition: 0.4s
			&:hover
				transition: 0.4s
				background #27B198
		.Bottom_Contactame
			background #4F57A3
			cursor pointer
			h1.tittle
				margin 0
				color white
			p.desc_2
				margin .2em
			&:hover
				transition: 0.4s
				background #27B198
		.Bottom_Redes_Sociales
			background #4F57A3
			cursor pointer
			h1.tittle
				margin 0
				color white
			p.desc_3
				margin 0 .2em
			&:hover
				transition: 0.4s
				background #27B198
footer.Footer
	background #ffffff
	font-size 1.2em
	text-align center
	cursor pointer
	&:hover
		transition: 0.4s
		background #27B198
	p.Team
		margin 0
		padding 1em
		font-size 1.4em
		&:hover
			color white
@media screen and (max-width: 680px)
	.showing
			//muestra el menu
			max-height: 20em
			transition: 0.6s
	.handle
		display: block	
		transition: 0.4s
	
@media screen and (min-width: 681px)
	.menu
	max-height 20em
	a
		display inline-block
	.list
		max-height: 20em
		transition: 0.6s	
		text-align: center;
	.item	
		display inline-block !important
		margin-right 1em
	.handle
		display: none
		transition: 0.6s

	
			
	
	
 